<%= form_for(@bill, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @bill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bill.errors.count, "error") %> prohibited this bill from being saved:</h2>

      <ul>
      <% @bill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :vendor_id, "Issuer", :class => "control-label" %>
    <div class="controls">
      <%= f.select :vendor_id, Vendor.all.map { |v| [v.name, v.id] } %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :issue_date, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :issue_date, :value => nice_date(f.object.issue_date), :class => 'datepicker' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :due_date, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :due_date, :value => nice_date(f.object.due_date), :class => 'datepicker' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to "Cancel", bills_path, :class => "btn" %>
  </div>
<% end %>
