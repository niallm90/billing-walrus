<h2>Sign up</h2>

<%= twitter_bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email %>

  <%= f.password_field :password %>

  <%= f.password_field :password_confirmation %>

  <%= f.actions do %>
    <%= f.submit "Sign up" %>
  <% end -%>
<% end %>

<%= render "links" %>
