<h2>Forgot your password?</h2>

<%= twitter_bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email %>

  <%= f.actions do %>
    <%= f.submit "Reset password" %>
  <% end -%>
<% end %>

<%= render "links" %>
