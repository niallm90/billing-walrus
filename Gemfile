  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier', '>= 1.0.3'
  gem 'therubyracer'
end


group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'factory_girl_rails', '~>1.2'
  gem 'pry'
  gem 'shoulda-matchers'
end

group :production do
  gem 'pg'
  gem 'newrelic_rpm'
end

