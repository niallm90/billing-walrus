  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier', '>= 1.0.3'
  gem 'therubyracer'
end


group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails', '~>1.2'
end

