source 'http://rubygems.org'

gem 'rails', '~>3.2.1'

gem 'thin'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier', '>= 1.0.3'
  gem 'therubyracer'
  gem 'jquery-rails'
  gem 'rails-backbone'
  gem 'handlebars_assets'
end


group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'factory_girl_rails', '~>1.2'
  gem 'pry'
  gem 'shoulda-matchers'
end

group :production do
  gem 'pg'
  gem 'newrelic_rpm'
end

gem 'date_validator'
gem 'devise'
gem 'cancan'

